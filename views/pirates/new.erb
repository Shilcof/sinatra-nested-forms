<form method="post" action="/pirates">
    <h2>Pirate</h2>
    <label for="pirate_name"> Pirate name</label>
    <input type="text" id="pirate_name" name="pirate[name]"><br/>
    <label for="weight"> Pirate weight</label>
    <input type="text" id="weight" name="pirate[weight]"><br/>
    <label for="height"> Pirate height</label>
    <input type="text" id="height" name="pirate[height]"><br/>

    <h2>Ships</h2>
    <% (1..2).each do |i| %>
    <label for=<%= "ship_name_#{i}" %>> Ship <%= i %> name</label>
    <input type="text" id=<%= "ship_name_#{i}" %> name="pirate[ships][][name]"><br/>
    <label for=<%= "ship_type_#{i}" %>> Ship <%= i %> type</label>
    <input type="text" id=<%= "ship_type_#{i}" %> name="pirate[ships][][type]"><br/>
    <label for=<%= "ship_booty_#{i}" %>> Ship <%= i %> booty</label>
    <input type="text" id=<%= "ship_booty_#{i}" %> name="pirate[ships][][booty]"><br/><br/>
    <% end %>

    <input type="submit" value="submit" id="Submit">
</form>